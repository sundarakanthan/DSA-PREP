package chocolateConveyor;

public class ConveyorBelt {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int packets[] = {4,0,7,6,0,2}; 
		conveyorBelt(packets);
	}
	public static int conveyorBelt(int packets[]) {
		for(int i=0;i<packets.length;i+=2) {
			for(int j=i+1;j<=packets.length;j++) {
				if(packets[i] == 0) {
					System.out.println(packets[i]);
				}
				if(packets[j]==0) {
					System.out.println(packets[j]);
				}
			}
		}
		return 0;
	}

}
